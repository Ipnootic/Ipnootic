<settings>
    <category label="General">
        <setting id="use_artwork" type="bool" label="Mostrar posters/backdrops (TMDb)" default="true"/>
        <setting id="menu_preset" type="enum" label="Menu preset" values="Minimal|Extended|Fen-Style|Custom (menus.json)" default="2"/>

        <setting id="tmdb_api_key" type="text" label="TMDb API Key" default=""/>

        <setting id="menu_preset" type="enum" label="Menu preset" values="Minimal|Extended|Custom (menus.json)" default="0"/>
        <setting id="enabled_sections" type="text" label="Sections (comma-separated)" default="Movies,TV,Anime,Search"/>
        <setting id="enabled_providers" type="text" label="Providers (comma-separated)" default="a4k,coco"/>
        <setting id="auto_play_best" type="bool" label="Auto play best source" default="false"/>
        <setting id="prefer_quality" type="enum" label="Preferred quality" values="2160p|1080p|720p|Any" default="1"/>
        <setting id="filters_exclude" type="text" label="Exclude keywords (comma-separated)" default="cam,ts,3d,he-aac"/>
    </category>
    <category label="Debrid">
        <setting id="rd_token" type="text" label="Real-Debrid Token" default=""/>
        <setting id="pm_token" type="text" label="Premiumize Token" default=""/>
        <setting id="ad_token" type="text" label="AllDebrid Token" default=""/>
    </category>
    <category label="Trakt">
        <setting id="trakt_enabled" type="bool" label="Enable Trakt" default="false"/>
        <setting id="trakt_access_token" type="text" label="Trakt Access Token" default=""/>
        <setting id="trakt_refresh_token" type="text" label="Trakt Refresh Token" default=""/>
    </category>
    <category label="Subtitles">
        <setting id="os_enabled" type="bool" label="OpenSubtitles: Enable" default="true"/>
        <setting id="os_api_key" type="text" label="OpenSubtitles API Key" default=""/>
        <setting id="os_langs" type="text" label="Languages (comma-separated, e.g., pt,pt-BR,en)" default="pt,pt-BR"/>
        <setting id="os_auto_load" type="bool" label="Auto-load best subtitle" default="true"/>
    </category>
    <category label="Playback">
        <setting id="autoplay_next" type="bool" label="Auto reproduzir próximo episódio" default="false"/>
        <setting id="post_play_prompt" type="bool" label="Perguntar no fim do episódio (parar/seguir)" default="true"/>
        <setting id="nextup_source" type="enum" label="Fonte Next Up" values="Trakt|Local (histórico Ares)" default="0"/>
        <setting id="nextup_limit" type="number" label="Limite Next Up" default="20"/>
    </category>
    <category label="Trakt Auth">
        <setting id="trakt_client_id" type="text" label="Trakt Client ID" default=""/>
        <setting id="trakt_client_secret" type="text" label="Trakt Client Secret" option="hidden" default=""/>
        <setting id="trakt_device_code" type="action" label="Autorizar Trakt (Device Code)" option="close" action="RunPlugin(plugin://plugin.video.ares/?action=trakt_auth)"/>
    </category>
    <category label="Library/Lists">
        <setting id="hide_watched" type="bool" label="Ocultar vistos" default="true"/>
        <setting id="filters_min_seeders" type="number" label="Mínimo de seeders" default="5"/>
    <setting id="filters_min_size_gb" type="number" label="Tamanho mínimo (GB)" default="0.5"/>
    <setting id="filters_max_size_gb" type="number" label="Tamanho máximo (GB) (0=ilimitado)" default="0"/>
    <setting id="prefer_codecs" type="text" label="Codecs preferidos (comma-separated)" default="x265,hevc,av1"/>
    <setting id="exclude_cam_ts" type="bool" label="Excluir CAM/TS" default="true"/>
    </category>
</settings>



